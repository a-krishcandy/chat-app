package com.example.chat_july;

public class messages {
    String text;
    String sender ID;
    String receiver ID;
    long time_sent;
    long time_delivered;
    long time_seen;
    String type;
    public messages () {
        this.text = "Hi, how are you?";
    }
    public messages (String text, String sender ID, String receiverID, long time_sent, long time_delivered,
                     long time_seen, String type) {
            this.text = text;
            this.senderID = sender ID;
            this.receiverID = receiver ID;
            this.time_sent = time_sent;
            this.time_delivered = time_delivered;
            this.time_seen= time_seen;
            this.type = type;
        }
        public String getMessage(){
            return text;
        }
        public void setMessage(String text) {
            this.text = text;
    }
    public String getSenderID() {
        return senderID;
    }
    public void setSenderID(String senderID) {
        this.senderID = senderID;
    }

    messages msg1 = new messages(text:"Hello!", senderID: "1", receiverID: "2", time_sent:0100,  time_delivered:0115,  time_seen: 0115,  type:"text");
    messages msg2 = new messages();
}
